<%- include('./partials/header.ejs', {user: user}) %>
<div class="container-fluid">
        <div class="row">
                <%- include('./partials/left-menubar', {active: 'authored', user: user})  %>  
                <%- include('./partials/profile-card', {user: user}) %>

                <!-- Main Content-->
                <div class="col-10 offset-2">
                        <div class="container mt-5">
                                <div class="row justify-content-center">
                                        <div class="col-10">
                                                <h2>My Documents</h2><hr>
                                                <% if (user.documents.authored.length > 0) { %>
                                                        <p>These are the documents you have created</p>
                                                <% } else { %>
                                                        <p>You are yet to create your first document!</p>
                                                <% } %>
                                        </div>
                                </div>
                                
                                <% if (user.documents.authored.length > 0) { %>
                                        <div class="row justify-content-center">
                                                <div class="col-10">
                                                        <table class="table table-striped">
                                                                <thead class="thead-light">
                                                                        <tr>
                                                                                <th scope="col">Document ID</th>
                                                                                <th scope="col">Document Subject</th>
                                                                                <th scope="col">Date of Creation</th>
                                                                                <th scope="col">Forwarded To</th>
                                                                                <th scope="col">Current Status</th>
                                                                        </tr>
                                                                </thead>
                                                                <tbody>
                                                                </tbody>
                                                        </table>
                                                </div>
                                        </div>
                                <% } %>
                                
                        </div>
                </div>
        </div>
</div>

<%- include('./partials/foot') %> 
