<div class="container">
        <div class="row">
                <div class="col-12">
                        <form action="/admin/add-new-user" method="post" autocomplete="off" class="mt-5">

                                <div class="input-group row mb-2">
                                        <div class="col-2">
                                                <label for="email" class="form-label">Email <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-10">
                                                <input id="email" type="email" name="email" class="form-control" placeholder="Email Address" required>
                                        </div>
                                        
                                </div>

                                <div class="input-group row mb-2">
                                        <div class="col-2">
                                                <label for="password" class="form-label">Password<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-7">
                                                <input id="password" type="text" name="password" class="form-control" placeholder="Password" required>
                                        </div>
                                        <div class="col-3">
                                                <button class="btn btn btn-secondary" type="button" onclick="generatePassword()">Generate Password</button>
                                        </div>
                                </div>
                                
                                <div class="input-group row mb-2">
                                        <div class="col-2">
                                                <label for="prefix" class="form-label">Prefix <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-10">
                                                <select id="prefix" name="prefix" class="form-select" aria-label="prefix select" required>
                                                        <option selected value="">Prefix</option>
                                                        <option value="Dr.">Dr.</option>
                                                        <option value="Mr.">Mr.</option>
                                                        <option value="Mrs.">Mrs.</option>
                                                        <option value="Ms.">Ms.</option>
                                                </select>
                                        </div>
                                </div>
                                
                                <div class="input-group row mb-2">
                                        <div class="col-2">
                                                <label for="firstName" class="form-label">Name <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-4">
                                                <input type="text" name="firstName" id="firstName" class="form-control" placeholder="First Name" required>
                                        </div>
                                        <div class="col-3">
                                                <input type="text" name="middleName" id="middleName"  class="form-control" placeholder="Middle Name">
                                        </div>
                                        <div class="col-3">
                                                <input type="text" name="lastName" id="lastName"  class="form-control" placeholder="Last Name" required>
                                        </div>
                                </div>

                                <div class="input-group row mb-2">
                                        <div class="col-2">
                                                <label for="group" class="form-label">Group <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-10">
                                                <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="group" id="inlineRadio1" value="Faculty" >
                                                        <label class="form-check-label" for="inlineRadio1">Faculty</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="group" id="inlineRadio2" value="Student" >
                                                        <label class="form-check-label" for="inlineRadio2">Student</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                        <input class="form-check-input" type="radio" name="group" id="inlineRadio3" value="Ofiicials" >
                                                        <label class="form-check-label" for="inlineRadio3">Administrative Officer</label>
                                                </div>
                                        </div>
                                </div>

                                <div class="input-group row mb-2">
                                        <div class="col-2">
                                                <label for="department" class="form-label">Department <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-10">
                                                <input id="department" type="text" name="department"  class="form-control" required placeholder="Department">
                                        </div>
                                </div>

                                <div class="input-group row mb-3">
                                        <div class="col-2">
                                                <label for="designation" class="form-label">Designation <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-10">
                                                <input id="designation" type="text" name="designation"  class="form-control" required placeholder="Designation">
                                        </div>
                                </div>


                                <div class="d-grid gap-2 col-6 mx-auto mt-5">
                                        <button class="btn btn-primary" type="submit">Add User</button>
                                </div>

                        </form>
                </div>
        </div>
</div>